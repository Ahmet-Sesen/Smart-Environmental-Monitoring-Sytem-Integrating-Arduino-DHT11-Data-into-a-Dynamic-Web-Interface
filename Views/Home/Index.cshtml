@model List<MyWebApi.Models.NemSicaklikVerisi>

<!DOCTYPE html>
<html>
<head>
    <title>Veri Listesi</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .empty-data {
            text-align: center;
            font-style: italic;
            color: #999;
        }
    </style>
</head>
<body>
    <h1>Veri Listesi</h1>
    @if (Model != null && Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Saat</th>
                    <th>Sıcaklık</th>
                    <th>Nem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var veri in Model)
                {
                    <tr>
                        <td>@veri.Id</td>
                        <td>@veri.Saat</td>
                        <td>@veri.Sicaklik</td>
                        <td>@veri.Nem</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="empty-data">Görüntülenecek veri bulunamadı.</p>
    }
</body>
</html>

